extends layout

block content
    
  .jumbotron.text-center.bg-transparent.mt-5
    h1.display-5 Welcome to forDinner
    p.lead find amazing new recipies the whole family can enjoy
    .row
      .container.w-25.text-left
        .card.bg-info.text-white.mt-2
          .card-header login
          .card-body
            .form-group.w-75.mr-auto.ml-auto
              label(for="name") Username
              input.form-control.form-control-lg(placeholder='Username')
              label(for="password") Password
              input.form-control.form-control-lg(type="password")
        a.btn.btn-outline-info.btn-lg.w-100.mt-2.bg-light(href='#',role='button') login
